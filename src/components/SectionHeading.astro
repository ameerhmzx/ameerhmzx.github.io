---
import { clsx } from "clsx";
const { name: transitionName } = Astro.props;
---

<div class="flex w-full py-2 px-8">
  <h1
    transition:name={transitionName}
    class={
      clsx(
        "before:content-['#'] before:text-slate-200 before:blur-[1.5px] before:duration-300 before:-z-10 before:absolute m-0",
        "hover:before:blur-none hover:before:text-slate-400 dark:before:text-slate-800 dark:hover:before:text-slate-600",
        "before:translate-y-0 before:-translate-x-7 before:scale-[1.5] hover:before:translate-y-0 hover:before:-translate-x-8 hover:before:scale-100",
      )
    }>
    <slot />
  </h1>
</div>
