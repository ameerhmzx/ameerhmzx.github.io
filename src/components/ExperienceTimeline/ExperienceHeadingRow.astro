---
import { clsx } from "clsx";
interface Props {
  heading: string;
  isFirst?: boolean;
  isLast?: boolean;
}

const { heading, isLast, isFirst } = Astro.props;
---

<>
  <div class="prose prose-sm dark:prose-invert mb-3 mt-2"><h2>{heading}</h2></div>
  <div class={
    clsx(
      "hidden sm:block relative w-1 bg-gray-100 dark:bg-gray-800",
      isFirst && "rounded-t-full",
      isLast && "rounded-b-full",
    )
  } />
  <div />
</>
