---
import { clsx } from "clsx";
interface Props {
  startDate: Date;
  endDate: Date;
  className?: string;
}

const { startDate, endDate, className } = Astro.props;

const dateOptions: Intl.DateTimeFormatOptions = { year: "numeric", month: "short" };
const dateRange = startDate && endDate
  ? `${startDate.toLocaleDateString("en-US", dateOptions)} - ${endDate.toLocaleDateString("en-US", dateOptions)}`
  : startDate
    ? startDate.toLocaleDateString("en-US", dateOptions)
    : endDate
      ? endDate.toLocaleDateString("en-US", dateOptions)
      : undefined;
---

<div class={
  clsx(
    "w-fit text-xs font-bold border border-gray-300 dark:border-gray-700 text-gray-500 rounded-full px-3 py-1 bg-gray-100/60 dark:bg-gray-900/60",
    className,
  )
}>
  {dateRange}
</div>
