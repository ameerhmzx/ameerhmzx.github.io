---
import { clsx } from "clsx";
const { variant, className, ...props } = Astro.props;

const Base = Astro.props.href ? "a" : "button";

const classes = {
  "primary": "dark:bg-white bg-black dark:text-black text-white",
  "outline": "border border-black dark:border-white text-black dark:text-white hover:bg-primary",
  "text": "text-black dark:text-white",
};
---

<Base {...props}
      class={clsx(
        className,
        classes[variant] || classes["primary"],
        "px-3 py-1.5 text-sm rounded-md w-fit duration-200 inline-flex items-center justify-center gap-2 whitespace-nowrap",
        variant === "text" ?
          "underline hover:underline-offset-4 underline-offset-2 duration-300" :
          "no-underline ring-black dark:ring-white hover:ring-1 focus:ring-1 ring-offset-2 hover:scale-y-90 focus:scale-y-90 hover:scale-x-95 focus:scale-x-95 ring-offset-white dark:ring-offset-slate-950")}>
  <slot name="start-icon" />
  <slot />
  <slot name="end-icon" />
</Base>
